{
  "comment": "SAP AI Core model configurations - https://help.sap.com/docs/sap-ai-core/sap-ai-core-service-guide/consume-generative-ai-models-using-sap-ai-core?locale=en-US",
  "models": {
    "gpt-5-nano": {
      "provider": "sap-aicore",
      "supportsStreaming": true,
      "supportsVision": true,
      "apiType": "provider",
      "description": "OpenAI GPT-5 nano model via SAP AI Core provider with vision support"
    },
    "anthropic--claude-4-sonnet": {
      "provider": "anthropic",
      "supportsStreaming": true,
      "supportsVision": true,
      "apiType": "direct",
      "endpoint": "/invoke",
      "requestFormat": "anthropic_bedrock",
      "anthropic_version": "bedrock-2023-05-31",
      "max_tokens": 1000,
      "description": "Anthropic Claude 4 Sonnet via direct SAP AI Core API",
      "streamingSupported": true,
      "directApiStreaming": true
    },
    "gemini-2.5-flash": {
      "provider": "google",
      "supportsStreaming": false,
      "supportsVision": false,
      "apiType": "direct",
      "endpoint": "/models/gemini-2.5-flash:generateContent",
      "requestFormat": "google_ai_studio",
      "max_tokens": 1000,
      "description": "Google Gemini 2.5 Flash via direct SAP AI Core API (vision disabled due to limitations)",
      "limitations": {
        "maxTextLengthWithImages": 150,
        "skipImagesOnLongText": true,
        "visionDisabled": true
      },
      "formatOptions": {
        "imageFormat": "inline_data",
        "alternativeImageFormat": "fileData"
      }
    }
  },
  "providerSupportedModels": ["gpt-5-nano"],
  "directApiModels": ["anthropic--claude-4-sonnet", "gemini-2.5-flash"]
}
