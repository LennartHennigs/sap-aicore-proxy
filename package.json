{
  "name": "sap-aicore-proxy",
  "version": "1.2.3",
  "private": true,
  "type": "module",
  "description": "A high-performance, enterprise-grade proxy server that provides OpenAI-compatible API access to SAP AI Core's AI models (GPT-5 nano, Claude 4 Sonnet, Gemini 2.5 Flash).",
  "scripts": {
    "start": "node --import=tsx --env-file=.env ./src/sap-aicore-proxy.ts",
    "proxy": "node --import=tsx --env-file=.env ./src/sap-aicore-proxy.ts",
    "stop": "node -e \"const fs = require('fs'); const path = require('path'); const pidFile = path.join(__dirname, 'sap-aicore-proxy.pid'); if (fs.existsSync(pidFile)) { const pid = parseInt(fs.readFileSync(pidFile, 'utf8').trim()); try { process.kill(pid, 'SIGTERM'); console.log('‚úÖ SAP AI Core proxy stopped (PID: ' + pid + ')'); setTimeout(() => { if (fs.existsSync(pidFile)) { fs.unlinkSync(pidFile); console.log('üóëÔ∏è Cleaned up PID file'); } }, 1000); } catch (e) { console.log('‚ö†Ô∏è Process not found, removing stale PID file'); try { fs.unlinkSync(pidFile); } catch (unlinkErr) { /* ignore */ } } } else { console.log('‚ÑπÔ∏è No running instance found'); }\"",
    "deploy-model": "./scripts/deploy-model.sh",
    "dev": "node --import=tsx --env-file=.env --watch ./src/sap-aicore-proxy.ts",
    "test": "node --import=tsx --env-file=.env ./tests/proxy-test-suite.ts",
    "test:connection": "node --import=tsx --env-file=.env ./tests/unit/connection-tests.ts",
    "test:text": "node --import=tsx --env-file=.env ./tests/unit/text-processing-tests.ts",
    "test:image": "node --import=tsx --env-file=.env ./tests/unit/image-processing-tests.ts",
    "test:validation": "node --import=tsx --env-file=.env ./tests/unit/response-validation-tests.ts",
    "test:error": "node --import=tsx --env-file=.env ./tests/integration/error-handling-tests.ts",
    "test:performance": "node --import=tsx --env-file=.env ./tests/performance/load-tests.ts",
    "test:run": "./scripts/run-tests.sh",
    "test:full": "./scripts/run-tests.sh -s -k all",
    "test:report": "./scripts/run-tests.sh -r all",
    "test:security": "node --import=tsx --env-file=.env ./tests/security-test-runner.ts",
    "test:secure-logger": "node --import=tsx --env-file=.env ./tests/unit/secure-logger-tests.ts",
    "test:validation-middleware": "node --import=tsx --env-file=.env ./tests/unit/validation-middleware-tests.ts",
    "test:rate-limiting": "node --import=tsx --env-file=.env ./tests/unit/rate-limiting-tests.ts",
    "test:security-headers": "node --import=tsx --env-file=.env ./tests/unit/security-headers-tests.ts",
    "test:security-integration": "node --import=tsx --env-file=.env ./tests/integration/security-integration-tests.ts",
    "test:auth": "node --import=tsx --env-file=.env ./tests/run-authentication-tests.ts",
    "test:auth:unit": "node --import=tsx --env-file=.env ./tests/unit/api-key-manager-tests.ts && node --import=tsx --env-file=.env ./tests/unit/auth-middleware-tests.ts",
    "test:auth:integration": "node --import=tsx --env-file=.env ./tests/integration/authentication-integration-tests.ts",
    "test:api-key-manager": "node --import=tsx --env-file=.env ./tests/unit/api-key-manager-tests.ts",
    "test:auth-middleware": "node --import=tsx --env-file=.env ./tests/unit/auth-middleware-tests.ts",
    "test:auth:flow": "node --import=tsx --env-file=.env ./tests/integration/auth-flow-tests.ts",
    "test:sap-rate-limit": "node --import=tsx --env-file=.env ./tests/run-rate-limit-tests.ts",
    "test:sap-rate-limit:unit": "node --import=tsx --env-file=.env ./tests/unit/sap-aicore-rate-limit-tests.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leanix-sandbox/ai-hackathon-starter.git"
  },
  "keywords": [],
  "author": "Lennart Hennigs",
  "license": "MIT",
  "homepage": "https://github.com/leanix-sandbox/ai-hackathon-starter#readme",
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ai-foundry/sap-aicore-provider": "^0.0.10",
    "@ai-sdk/provider": "^1.1.3",
    "@openai/agents": "^0.0.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0"
  }
}
